<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./components/commonHead') %>
  <title>WeatherApp</title>
  <meta name="title" content="Weatherapp" >
  <meta name="description" content="Weatherapp fullstack application project.">
  <meta name="keywords" content="Weatherapp, fullstack, application, project, Javascript">
</head>
<body class="min-vh-100">
  <div class="home min-vh-100">

    <div class="row p-0 m-0">

      <div class="col-12 text-center get_started">
        <h2>Get started with WeatherApp!</h2>
      </div>

      <div class="col-12 col-md-6 text-center">
        <div class="formArea">
          <h4 class="titleForm">Sign Up</h4>

          <form method="POST" action="/users/sign-up">
            <div class="form-group">
              <label for="exampleInputUsername">Username</label>
              <input type="text" title="At least 3 characters." name="username" class="form-control" placeholder="Enter username">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Email</label>
              <input title="Enter valid email." type="email" name="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" title="At least 6 characters long password." name="password" class="form-control" placeholder="Enter password">
            </div>

            <button type="submit" class="btn btn-info mt-1 mb-2">Sign up</button>
          </form>
        </div>

      </div>

      <!-- SIGN IN AREA -->
      <div class="col-12 col-md-6 text-center">

        <div class="formArea">
          <h4 class="titleForm">Sign In</h4>

          <form action="/users/sign-in" method="POST">
            <div class="form-group">
              <label for="exampleInputEmail1">Email</label>
              <input name="email" type="email" class="form-control" aria-describedby="emailHelp"
                placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input name="password" type="password" class="form-control" placeholder="Enter password">
            </div>

            <button type="submit" class="btn btn-info mt-1">Submit</button>
          </form>

        </div>
      </div>
    </div>
  </div>

  <%- typeof error === 'undefined'? '' : "<script>alert('"+error+"')</script>" %>
  <script src="https://kit.fontawesome.com/a9f34edc21.js" crossorigin="anonymous"></script>
  <%- include("./components/footerScripts") %>
</body>

</html>